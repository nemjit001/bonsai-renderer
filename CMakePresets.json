{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "visual-studio-x64",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-x64",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "toolset": {
        "strategy": "external",
        "value": "Clang"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs-x64-debug",
      "displayName": "Visual Studio Debug (x64)",
      "configurePreset": "visual-studio-x64",
      "configuration": "Debug"
    },
    {
      "name": "vs-x64-release-with-debug-info",
      "displayName": "Visual Studio Release with Debug info (x64)",
      "configurePreset": "visual-studio-x64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs-x64-release",
      "displayName": "Visual Studio Release (x64)",
      "configurePreset": "visual-studio-x64",
      "configuration": "Release"
    },
    {
      "name": "clang-x64-debug",
      "displayName": "Clang Debug (x64)",
      "configurePreset": "clang-x64",
      "configuration": "Debug"
    },
    {
      "name": "clang-x64-release-with-debug-info",
      "displayName": "Clang Release with Debug info (x64)",
      "configurePreset": "clang-x64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "clang-x64-release",
      "displayName": "Clang Release (x64)",
      "configurePreset": "clang-x64",
      "configuration": "Release"
    }
  ]
}
